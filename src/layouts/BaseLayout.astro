---
const { title, description } = Astro.props;
---

<style is:global>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        background: black; /* Fondo oscuro */
        overflow: hidden; /* Evitar scroll innecesario */
    }

    .stars {
        width: 1px;
        height: 1px;
        background: transparent;
        box-shadow: 
            10px 20px white, 50px 100px white, 100px 200px white, 150px 250px white,
            200px 300px white, 250px 350px white, 300px 400px white, 350px 450px white,
            400px 500px white, 450px 550px white, 500px 600px white, 550px 650px white,
            600px 700px white, 650px 750px white, 700px 800px white, 750px 850px white,
            800px 900px white, 850px 950px white, 900px 1000px white, 950px 1050px white,
            1000px 1100px white, 1050px 1150px white, 1100px 1200px white, 1150px 1250px white;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
    }

    @keyframes twinkle {
        from {
            opacity: 1;
        }
        to {
            opacity: 0.3;
        }
    }

    .twinkling {
        animation: twinkle 2s infinite alternate;
    }
</style>

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content={description}>
		<title>{title}</title>
	</head>
	<body>
        <div class="stars twinkling"></div>
		<slot />
	</body>
</html>